border-1px($color)
    &:after
        display:block
        position:absolute
        left:0
        bottom:0
        width:100%
        border-bottom:1px solid $color
        content:''

border-none()
    $.after
      display:none
/*  小图标在不同dpr设备下的处理 */
bg-image($url)
    background-image: url($url+"@2x.png")  /* 默认dpr为2的设备*/
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
      background-image: url($url+"@3x.png")
  